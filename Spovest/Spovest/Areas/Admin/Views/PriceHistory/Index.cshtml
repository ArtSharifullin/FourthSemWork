@model Spovest.Areas.Admin.Models.PriceHistory.PriceHistoryVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Price History";
    Layout = "_AdminLayout";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 mb-4">
        <span class="text-muted fw-light">Price History /</span> List
    </h4>

    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">Price History</h5>
        </div>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>PlayerId</th>
                        <th>Purchase Price</th>
                        <th>Sale Price</th>
                        <th>Timestamp</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var price in Model.Prices)
                    {
                        <tr>
                            <td>@price.Id</td>
                            <td>@price.PlayerId</td>
                            <td>@price.Purchase_price</td>
                            <td>@price.Sale_price</td>
                            <td>@price.Timestamp.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="icon-base ti tabler-dots-vertical"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-area="Admin" asp-action="Update" asp-route-id="@price.Id">
                                            <i class="icon-base ti tabler-edit me-2"></i> Edit
                                        </a>
                                        <a class="dropdown-item" asp-area="Admin" asp-action="Remove" asp-route-id="@price.Id">
                                            <i class="icon-base ti tabler-trash me-2"></i> Delete
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div> 