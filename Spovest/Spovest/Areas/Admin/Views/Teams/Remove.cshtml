@model Spovest.Areas.Admin.Models.Teams.TeamFormVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete Team";
    Layout = "_AdminLayout";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 mb-4">
        <span class="text-muted fw-light">Teams /</span> Delete
    </h4>

    <div class="row">
        <div class="col-xl">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Delete Team</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        Are you sure you want to delete this team?
                    </div>

                    <div class="mb-3">
                        <div class="d-flex align-items-center mb-3">
                            @if (!string.IsNullOrEmpty(Model.Img))
                            {
                                <img src="@Model.Img" alt="Team Logo" class="rounded me-3" width="100" height="100" />
                            }
                            <h5 class="mb-0">@Model.Name</h5>
                        </div>
                    </div>

                    <form asp-action="RemoveConfirmed" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 