@model Spovest.Areas.Admin.Models.Players.PlayersVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Players";
    Layout = "_AdminLayout";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 mb-4">
        <span class="text-muted fw-light">Players /</span> List
    </h4>

    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">Players</h5>
        </div>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Team</th>
                        <th>Games</th>
                        <th>Points</th>
                        <th>Assists</th>
                        <th>Rebounds</th>
                        <th>Steals</th>
                        <th>Minutes</th>
                        <th>Ftps</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var player in Model.Players)
                    {
                        <tr>
                            <td>@player.Id</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="@player.Img" alt="Avatar" class="rounded-circle me-2" width="32" height="32">
                                    <span>@player.Name</span>
                                </div>
                            </td>
                            <td>@player.TeamName</td>
                            <td>@player.Games</td>
                            <td>@player.Points</td>
                            <td>@player.Assists</td>
                            <td>@player.Rebounds</td>
                            <td>@player.Steals</td>
                            <td>@player.Minutes</td>
                            <td>@player.Ftps</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="icon-base ti tabler-dots-vertical"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-area="Admin" asp-action="Update" asp-route-id="@player.Id">
                                            <i class="icon-base ti tabler-edit me-2"></i> Edit
                                        </a>
                                        <a class="dropdown-item" asp-area="Admin" asp-action="Remove" asp-route-id="@player.Id">
                                            <i class="icon-base ti tabler-trash me-2"></i> Delete
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div> 