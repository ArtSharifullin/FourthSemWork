@model Spovest.Areas.Admin.Models.Users.UserFormVM
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete User";
    Layout = "_AdminLayout";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="py-3 mb-4">
        <span class="text-muted fw-light">Users /</span> Delete
    </h4>

    <div class="row">
        <div class="col-xl">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Delete User</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        Are you sure you want to delete this user?
                    </div>

                    <div class="mb-3">
                        <div class="d-flex align-items-center mb-3">
                            <h5 class="mb-0">@Model.FirstName</h5>
                        </div>

                        <dl class="row">
                            <dt class="col-sm-2">Email</dt>
                            <dd class="col-sm-10">@Model.Email</dd>
                        </dl>
                    </div>

                    <form asp-action="RemoveConfirmed" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 