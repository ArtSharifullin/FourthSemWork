@using Spovest.Helpers
<!--top bar-->
<div class="container-fluid top_bar fixed-top">
    <div class="top_bar_wrapper d-flex align-items-center justify-content-between">
        <div class="search_bar d-flex align-items-center">
            <div class="show_hide d-flex align-items-center">
                <button type="button" id="click" title="Toggle Side Bar">
                    <span class="toggle_bar_one"></span>
                    <span class="toggle_bar_two"></span>
                    <span class="toggle_bar_three"></span>
                </button>
            </div>
            <h1 style="color: black; font-size:24px">Made By Artur Sharifullin</h1>
        </div>
        <div class="user_bar d-flex align-items-center justify-content-end">
            <div class="search_wrapper">
                <a href="javascript:void(0)" class="search_sm d-none">
                    <i class="flaticon-loupe d-flex align-items-center"></i>
                </a>
            </div>
            <div class="dollar_wrapper">
                <div class="balance-dropdown">
                    <a href="#" id="balanceLink" data-balance="@Model.CurrentUser.Balance" data-withdraw-blocked="@Model.CurrentUser.IsWithdrawBlocked">$@Model.CurrentUser.Balance</a>
                    <div class="dropdown-content">
                        <a asp-controller="Main" asp-action="Balance" id="btnRefill" style="border:none">Пополнить</a>
                        <a asp-controller="Main" asp-action="Withdraw" id="btnWithdraw" style="border:none">Вывести</a>
                    </div>
                </div>
            </div>
            <style>
                .balance-dropdown {
                    position: relative;
                    display: inline-block;
                    cursor: pointer;
                }

                .balance-dropdown:hover .dropdown-content {
                    display: block;
                }

                .dropdown-content {
                    display: none;
                    position: absolute;
                    background-color: #f9f9f9;
                    min-width: 120px;
                    box-shadow: 0px 8px 16px rgba(0,0,0,0.2);
                    z-index: 1000;
                    right: 0;
                    border-radius: 5px;
                    padding: 10px 0;
                }

                .dropdown-content button {
                    width: 100%;
                    padding: 8px 16px;
                    margin: 0;
                    border: none;
                    background: none;
                    text-align: left;
                    cursor: pointer;
                    font-size: 14px;
                }

                .dropdown-content button:hover {
                    background-color: #f1f1f1;
                }

                #btnWithdraw.disabled {
                    opacity: 0.5;
                    cursor: not-allowed;
                }
            </style>
            <div class="profile_wrapper d-flex align-items-center">
                <div class="img_wrapper">
                    <a asp-controller="Main" asp-action="Profile">
                        <img src="~/images/user/profile-sm.png" alt="Profile Picture">
                    </a>
                </div>
                <div class="drop">
                    <a class="profile_link disable">@Model.CurrentUser.Name <i class="fas fa-caret-down"></i></a>
                    <div class="drop_content">
                        <a asp-controller="Main" asp-action="Profile">Профиль</a>
                        <a asp-area="Admin" asp-controller="Admin" asp-action="Index">Админ Панель</a>
                        <a asp-controller="Auth" asp-action="Logout">Выйти</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>