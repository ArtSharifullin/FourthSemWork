@using Spovest.Models.Auth;
@using Spovest.Helpers
@model RegisterViewModel;
@{
    ViewData["Title"] = "Register";
    Layout = "_Layout";
}

<!--====sign up section start====-->
<section class="form_bg">
    <div class="container">
        <div class="form_container">
            <div class="form_header">
                @Html.ImageLink("Home", "Index", "Spovest Logo", "registration_logo", "", "/images/logo.png")
            </div>
            <form method="post" class="mt-60">
                <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4"></div>
                <h1 class="form_title">Let's Create Your Account</h1>
                <div class="mb-3">
                    <label for="email" class="form-label">First Name</label>
                    <input name="@nameof(Model.FirstName)" type="text" placeholder="Enter Your First Name" class="form-control para" required="required">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Last Name</label>
                    <input name="@nameof(Model.LastName)" type="text" placeholder="Enter Your Last Name" class="form-control para" required="required">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input name="@nameof(Model.Email)" type="email" placeholder="Enter Your Email" class="form-control para" required="required">
                </div>
                <div class="mb-3">
                    <label for="password-field" class="form-label">Password</label>
                    <div class="show_password">
                        <input name="@nameof(Model.Password)" type="password" placeholder="Enter Your Password" class="form-control para" required="required">
                        <i class="fas fa-eye toggle-password"></i>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="con_password" class="form-label">Confirm Password</label>
                    <input name="@nameof(Model.ConfirmPassword)" type="password" placeholder="Enter Your Confirm Password" class="form-control para" required="required">
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-red-500 text-sm mt-1" })
                </div>
                <button type="submit" class="btn btn-primary">Register Now!</button>
                <div class="form_footer">
                    <span>OR</span>
                    <p class="para">Already have an account. <a asp-controller="Auth" asp-action="Login">Log in</a></p>
                </div>
            </form>
        </div>
    </div>
</section>
<!--====sign up section end====-->
